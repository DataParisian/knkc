 * Program: pp1.c
 * Purpose: checks numbers and prints out repeated digits
*/

#include <stdio.h>
/*#include <stdbool.h>*/

int main(void){
	
	int digit_seen[10] = {0};
/*    repeated_digits[10] = {0};*/
	int digit, i;
	long n;
	
	printf ("Enter a number: ");
	scanf ("%ld", &n);

	while (n > 0){
		digit = n % 10;
				
/*		if (digit_seen[digit]){*/
/*			n /= 10;*/
/*			continue;*/
/*		}*/
				
		digit_seen[digit]++;
		n /= 10;
	}
	
	printf ("Repeated digit: ");
	for (i = 0; i < 10; i++){
		if (digit_seen[i] > 1)
			printf (" %d", i);
	}
	printf ("\n");
	
	return 0;
}
